<Window x:Class="Vistas.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinLogin" Height="660" Width="540"
        Background="#8524d9">
    <StackPanel Height="360" Width="340" Background="Transparent">
        <TextBlock Height="40" HorizontalAlignment="Center" Name="textBlock1" Text="Usuario" FontSize="24" />
        <TextBox Height="40" Name="textBox1" Width="201" />
        <TextBlock Height="40" Name="textBlock2" Text="Password" HorizontalAlignment="Center" FontSize="24" />
        <TextBox Height="40" Name="textBox2" Width="201" />
        <Button Content="Ingresar" Height="40" Name="button1" Width="100" Background="#78d924" FontSize="20"/>
    </StackPanel>
</Window>
